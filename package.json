{
  "scripts": {
    "check": "tsc --noEmit",
    "test": "pnpm check && vitest",
    "clean": "rm -rf ./dist",
    "build:category": "esbuild ./src/category-fetching-lambda/handler.ts --outfile=dist/category-fetching-lambda.js --bundle --platform=node --target=node22 --minify",
    "build:product": "esbuild ./src/product-fetching-lambda/handler.ts --outfile=dist/product-fetching-lambda.js --bundle --platform=node --target=node22 --minify",
    "build": "pnpm build:category && pnpm build:product",
    "zip:category": "zip ./dist/category-fetching-lambda.zip ./dist/category-fetching-lambda.js --junk-paths --quiet",
    "zip:product": "zip ./dist/product-fetching-lambda.zip ./dist/product-fetching-lambda.js --junk-paths --quiet",
    "zip": "pnpm zip:category && pnpm zip:product",
    "package": "pnpm clean && pnpm build && pnpm zip",
    "push": "pnpm package && terraform -chdir=infra init && terraform -chdir=infra apply -auto-approve -var-file=secret.tfvars"
  },
  "devDependencies": {
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.25.3",
    "msw": "^2.7.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.363.0",
    "@aws-sdk/client-sqs": "^3.363.0",
    "@aws-sdk/lib-dynamodb": "^3.363.0",
    "axios": "^1.9.0",
    "axios-cookiejar-support": "^6.0.2",
    "tough-cookie": "^5.1.2",
    "zod": "^3.24.3"
  }
}
