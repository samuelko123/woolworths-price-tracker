{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/core/*": [
        "./src/core/*"
      ],
      "@/domain": [
        "./src/domain/index.ts"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/integrations/*": [
        "./src/integrations/*"
      ],
      "@/tests/*": [
        "./test/*"
      ],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
