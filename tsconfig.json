{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/api/*": [
        "./src/api/*"
      ],
      "@/application": [
        "./src/application/index.ts"
      ],
      "@/database/*": [
        "./src/database/*"
      ],
      "@/queue/*": [
        "./src/queue/*"
      ],
      "@/logger": [
        "./src/logger/index.ts"
      ],
      "@/domain": [
        "./src/domain/index.ts"
      ],
      "@/tests/*": [
        "./test/*"
      ],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
