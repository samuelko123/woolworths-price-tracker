{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/api/*": [
        "./src/adapter/api/*"
      ],
      "@/database/*": [
        "./src/adapter/database/*"
      ],
      "@/queue/*": [
        "./src/adapter/queue/*"
      ],
      "@/logger": [
        "./src/adapter/logger/index.ts"
      ],
      "@/domain": [
        "./src/core/domain/index.ts"
      ],
      "@/port": [
        "./src/core/port/index.ts"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/tests/*": [
        "./test/*"
      ],
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
